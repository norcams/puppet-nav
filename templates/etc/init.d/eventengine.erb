#!/usr/bin/env bash
#
# This script controls start/stop/status of the NAV eventEngine Daemon.
#
## info: Reacts and creates alerts from events on the event queue.
initdir=/usr/local/nav/etc/init.d
bindir=/usr/local/nav/bin
localstatedir=/usr/local/nav/var
user=navcron
DAEMON=${bindir}/eventengine

# Source function library.
. ${initdir}/functions

[ -x ${DAEMON} ] || exit 1

# See how we were called.
case "$1" in
	start)
		# Start daemons.
		echo -n "Starting eventengine: "
		daemon "su - ${user} -c ${DAEMON}"
		rc=$?
		echo
		exit $rc
		;;
	stop)
		# Stop daemons.
		echo -n "Shutting down eventengine: "
		if killproc eventengine; then
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status eventengine
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

