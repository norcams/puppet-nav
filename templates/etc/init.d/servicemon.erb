#!/usr/bin/env bash
#
## info: Monitors configured services.

initdir=/usr/local/nav/etc/init.d
user=navcron
BIN=/usr/local/nav/bin/servicemon.py

# Source function library.
. ${initdir}/functions

[ -x $BIN ] || exit 1

KILLER=killwait
# See how we were called.
case "$1" in
	start)
		# Start daemons.
		echo -n "Starting servicemon: "
		daemon "su - ${user} -c $BIN"
		rc=$?
		echo
		exit $rc
		;;
	stop)
		# Stop daemons.
		echo -n "Shutting down servicemon: "
		if killproc servicemon.py; then
		    echo
		    exit 0
		else
		    echo
		    exit 1
		fi
        	;;
	restart)
		$0 stop
		$0 start
		;;
	status)
	        status servicemon.py
		exit $?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
esac

exit 0

